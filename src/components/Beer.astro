---
interface Props {
  name: string;
  brewery?: string;
  strength: number;
  pricePint?: number;
  priceHalf?: number;
  priceThird?: number;
  priceTwoThirds?: number;
  colour?: string;
  style?: string;
  image?: string;
}
const {
  name,
  brewery,
  strength,
  pricePint,
  priceHalf,
  priceTwoThirds,
  priceThird,
  image,
  colour,
  style,
} = Astro.props;
---

<li>
  <div class="image">
    <img src={image} />
  </div>
  <div class="text">
    <header>
      <div class="brewery-name">
        <p class="brewery">{brewery}&nbsp;&mdash;</p><p class="name">
          &nbsp;{name}
        </p>
      </div>
    </header>
    <div class="beer-details">
      <p class="style-strength">
        {style} • <span class="strength">{strength}%</span>
      </p>
      <ul class="prices">
        {
          priceThird && (
            <li>
              Third&nbsp;
              <span class="price-price">£{priceThird.toFixed(2)}</span>
            </li>
          )
        }
        {
          priceHalf && (
            <li>
              Half&nbsp;
              <span class="price-price">£{priceHalf.toFixed(2)}</span>
            </li>
          )
        }
        {
          priceTwoThirds && (
            <li>
              Two Thirds&nbsp;
              <span class="price-price">£{priceTwoThirds.toFixed(2)}</span>
            </li>
          )
        }
        {
          pricePint && (
            <li>
              Pint&nbsp;
              <span class="price-price">£{pricePint.toFixed(2)}</span>
            </li>
          )
        }
      </ul>
    </div>
  </div>
</li>
<style lang="scss">
  li {
    color: var(--colour-white);
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    font-family: "ceefax_text_2";
    margin-bottom: 10px;
  }

  .brewery-name {
    display: inline;

    p {
      display: inline;
      font-size: 16px;
    }

    .brewery {
      font-size: 16px;
    }

    .name {
      font-weight: 800;
    }
  }

  .beer-details {
    font-size: 16px;
  }
  .style-strength {
    margin: 10px 0;
  }

  .price-price {
    font-size: 18px;
    margin-left: 7px;
    color: var(--colour-l-blue);
  }

  .image {
    aspect-ratio: 1/1;
    height: auto;
    width: 66px;
    margin-right: 20px;
    flex-shrink: 0;
    img {
      height: 100%;
      width: 100%;
      object-fit: contain;
      object-position: top;
    }
  }

  .prices {
    display: flex;
    white-space: nowrap;
    align-items: center;
    justify-content: flex-start;
    padding: 0;
    margin: 0;

    li {
      display: flex;
      align-items: center;
      margin-right: 40px;
    }
  }

  .strength {
    font-weight: 800;
    font-size: 18px;
    color: var(--colour-white);
  }
</style>
